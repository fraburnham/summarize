{
    "manifest_version": 3,
    "name": "summarize",
    "version": "1.0",
    "description": "Don't read stuff",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript/dist/contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/index.html"
    },
    "background": {
        "service_worker": "serviceWorker/dist/serviceWorker.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "contentScript/dist/contentScript.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
